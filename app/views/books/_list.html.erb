  <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'63x63' %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "", edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: book, url: books_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :Title %><br />
        <%= f.text_field :title, autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :Opinion %><br />
        <%= f.text_field :body, autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.submit "Create Book", class:"btn btn-success" %>
      </div>
      <% end %>
    </div>